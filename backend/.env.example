# Server Configuration
PORT=3001
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# AWS RDS PostgreSQL Configuration
DB_HOST=your-rds-instance.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=medical_responder
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_SSL=true

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=your-client-id
COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_xxxxxxxxx

# AWS IoT Core (for real-time sync)
AWS_IOT_ENDPOINT=your-iot-endpoint.iot.us-east-1.amazonaws.com

# AWS S3 (for PDF storage)
S3_BUCKET_NAME=medical-responder-reports

# AWS Transcribe (for speech-to-text)
USE_AWS_TRANSCRIBE=true

# OpenAI Configuration (alternative to AWS Bedrock)
OPENAI_API_KEY=your-openai-key
